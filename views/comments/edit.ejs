<% include ../partials/header %>

<div class="container">
    <div class="flex-row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width :30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>